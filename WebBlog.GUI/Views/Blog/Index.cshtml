<script>
    $.ajax({
        url: 'https://localhost:44329/blog/get-blog-item/',
        type: 'GET',
        success: function(data) {
            $.each(data, function (key, value) {
                $('#list-posts').append(
                    `<div class="col-lg-6">
                        <div class="blog-post">
                            <div class="blog-thumb">
                                <img src="`+value.image+`" alt="">
                            </div>
                            <div class="down-content">
                                <span>Lifestyle</span>
                                <a href="/Blog/Detail?id=`+value.id+`"><h4>`+value.title+`</h4></a>
                                <ul class="post-info">
                                <li><a href="#">`+value.user.firstName+`</a></li>
                                <li><a href="#">`+value.createAt+`</a></li>
                                <li><a href="#">12 Comments</a></li>
                                </ul>
                                <p>`+value.summary+`</p>
                                <div class="post-options">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <ul class="post-tags">
                                                <li><i class="fa fa-tags"></i></li>
                                                <li><a href="#">Best Templates</a>,</li>
                                                <li><a href="#">TemplateMo</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>`
                );
            });
        },
        error: function(xhr, textStatus, errorThrown) {
            console.log('Error in Database');
        }
    });
</script>